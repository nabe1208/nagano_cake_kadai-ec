<div class="container">
 <h3>マイページ</h3>
 <div class="row">
  <div class="col-md-6">

<h5><strong>登録情報</strong> <%= link_to "編集する", edit_public_customer_path(@customer.id), class:"btn btn-success pl-3 pr-3 ml-5" %></h5>

<table class="table">
 <tr>
  <th>氏名</th>
  <td><%= @customer.full_name %></td>
 </tr>
 <tr>
  <th>カナ</th>
  <td><%= @customer.full_name_kana %></td>
 </tr>
 <tr>
  <th>郵便番号</th>
  <td><%= @customer.postal_code %></td>
 </tr>
 <tr>
  <th>住所</th>
  <td><%= @customer.address %></td>
 </tr>
  <tr>
  <th>電話番号</th>
  <td><%= @customer.telephone_number %></td>
 </tr>
 <tr>
  <th>メールアドレス</th>
  <td><%= @customer.email %></td>
 </tr>
</table>

<h5><strong>配送先</strong><%= link_to "一覧を見る", public_addresses_path, class:"btn btn-primary pl-4 pr-4 ml-5" %></h5>

<h5><strong>注文履歴</strong><%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary pl-4 pr-4 ml-4" %></h5>


  </div>
 </div>
</div>
