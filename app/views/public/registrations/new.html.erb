<!--customers/sign_up-->
<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>

  <div class="field">
    <p>名前</p>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autocomplete: "last_name" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div></br>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div></br>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.number_field :postal_code, autocomplete: "postal_code" %>
  </div></br>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, autocomplete: "address" %>
  </div></br>

  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= f.number_field :telephone_number, autocomplete: "telephone_number" %>
  </div></br>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div></br>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div></br>

  <div class="actions">
    <%= f.submit "新規登録" %>

  </div>
<% end %>

<p>既に登録済みの方</p>
<p><%= link_to 'こちら', customer_session_path %> からログインしてください。 </p>
