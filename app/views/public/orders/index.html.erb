<!--public_orders_path-->

<div class="container">
  <h3>注文履歴一覧</h3>
  <div class="row">
    <table class="table" ~~~ style="table-layout: fixed;width:100%;">
     <thead>
      <tr>
       <th class="col-md-2">注文日</th>
       <th class="col-md-3">配送先</th>
       <th class="col-md-2">注文商品</th>
       <th class="col-md-2">支払金額</th>
       <th class="col-md-2">ステータス</th>
       <th class="col-md-2">注文詳細</th>
      </tr>
     </thead>
     <tbody>
     <% @postage = 800 %>
     <% @orders.each do |order| %>
     <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td ~~~ style="word-wrap:break-word;"><%= order.address %></td>
      <td ~~~ style="word-wrap:break-word;">
       <% order.order_details.each do |order_detail| %>
      　<%= order_detail.item.name %></br>
       <% end %>
      </td>
      <td><%= (order.total_payment + @postage).to_s(:delimited) %>円</td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to '表示する', public_order_path(order.id), class:'btn btn-primary' %></td>
     </tr>
     <% end %>
     </tbody>
    </table>
    <%= paginate @page %>
 </div>
</div>

