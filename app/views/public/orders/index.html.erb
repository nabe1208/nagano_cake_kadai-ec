<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
  <% @postage = 800 %>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td><%= order.address %></td>
      <% order.order_details.each do |order_detail| %>
      　<td><%= order_detail.item.name %></td>
      <% end %>
      <td><%= (order.total_payment + @postage).to_s(:delimited) %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to '表示する', public_order_path(order.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>