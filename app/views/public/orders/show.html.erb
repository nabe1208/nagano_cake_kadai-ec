<!--編集中-->
<h1>注文履歴詳細</h1>

<p>注文情報</p>
<table>
 <tr>
   <th>注文日</th>
   <td><%= @order.created_at %></td>
 </tr>
 <tr>
   <th>配送先</th>
   <td><%= @order.address_display %></td>
 </tr>
 <tr>
   <th>支払方法</th>
   <td><%= @order.payment_method %></td>
 </tr>
 <tr>
   <th>ステータス</th>
   <td><%= @order.status %></td>
 </tr>
</table>

<p>請求情報</p>
<table>
  <tr>
   <th>商品合計</th>
   <td><%=%></td>
  </tr>
  <tr>
   <th>配送料</th>
   <td><%= @order.postage %></td>
  </tr>
  <tr>
   <th>ご請求額</th>
   <td><%= @subtotal.to_s %></td>
  </tr>
</table>

<p>注文内容</p>
<table>
 <thead>
  <tr>
   <th>商品</th>
   <th>単価(税込)</th>
   <th>個数</th>
   <th>小計</th>
  </tr>
 </thead>
 <tbody>
  <tr>
   <td><%= @order.item.name %></td>
   <td><%= @order.item.price %></td>
   <td><%= @order.item.cart_item.amount %></td>
   <td><%=%></td>
  </tr>
 </tbody>
</table>
