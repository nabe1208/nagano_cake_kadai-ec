<h1>ショッピングカート</h1>

<% @cart_items.each do |cart_item| %>
 <% if cart_item.errors.any? %>
  <ul>
   <h6>
     <%= cart_item.errors.count %> error prohibited this obj from being updateed:
   </h6>
     <% cart_item.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
  </ul>
 <% end %>
<% end %>

<p><%= link_to 'カートを空にする',public_destroy_all_path, method: :delete %></p>

     <table>
       <thead>
        <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
         <th></th>
        </tr>
       </thead>
     <tbody>
     <% @sum = 0 %>
     <% @cart_items.each do |cart_item| %>
       <tr>
         <td>
          <% if cart_item.item.image.attached? %>
           <%= image_tag(cart_item.item.image, size:"60") %>
          <% else %>
           <%= image_tag 'cake', size:"60" %>
          <% end %>
          <%= cart_item.item.name %>
         </td>
         <td><%= (cart_item.item.with_tax_price).to_s(:delimited) %></td>
         <td>
          <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
           <%= f.select :amount, *[1..10],
           {selected: cart_item.amount} %>
           <%= f.submit '変更' %>
          <% end %>
         </td>
         <td><%= (cart_item.subtotal).to_s(:delimited) %></td>
         <td><%= link_to '削除する', public_cart_item_path(cart_item.id), method: :delete %></td>
         <!-- ↓ each内で小計を加算 -->
         <% @sum += cart_item.subtotal %>
       </tr>
     <% end %>
     </tbody>
   </table>
   <%= link_to '買い物を続ける', public_items_path %>
   合計金額 <%= @sum.to_s(:delimited) %>

   <p><%= link_to '情報入力に進む', new_public_order_path %></p>