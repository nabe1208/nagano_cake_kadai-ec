<h1>注文履歴詳細</h1>
<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.customer.last_name + @order.customer.first_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <!--タブ切り替え 現在の状況(:status)を表示-->
      <%= link_to '更新', admin_order_path(@order.id), method: :patch %>
    </td>
  </tr>
</table>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @order_detail.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.with_tax_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= (order_detail.subtotal).to_s(:delimited) %></td>
      <td>
        <!--タブ切り替え 現在の状況(:making_status)を表示-->
      </td>
      <td><%= link_to '更新', admin_order_path(@order.id), method: :patch %></td>
    </tr>
    <% @sum += order_detail.subtotal %>
    <% end %>
  </tbody>
</table>
<% @postage = 800 %>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @sum.to_s(:delimited) %></td>
  </tr>
    <tr>
    <th>送料</th>
    <td><%= @postage %></td>
  </tr>
    <tr>
    <th>請求金額合計</th>
    <td><%= (@sum + @postage).to_s(:delimited) %></td>
  </table>
