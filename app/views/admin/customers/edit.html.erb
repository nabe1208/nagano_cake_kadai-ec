<!--編集中-->
<h1><%= @customer.full_name %>さんの会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <p>
    <%= f.label :id, "会員ID"%>
    <%= @customer.id %>
  </p>
  <p>
    <%= f.label :full_name, "氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :full_name_kana, "フリガナ"%>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </p>
  <p>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </p>
  <p>
    <%= f.label :address, "住所" %>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :telephone_number, "携帯電話" %>
    <%= f.text_field :telephone_number %>
  </p>
  <p>
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :is_deleted, "会員ステータス" %>
     <%= f.radio_button :is_deleted, false %>
     <%= f.label :is_deleted, "有効", value: false %>
     <%= f.radio_button :is_deleted, true %>
     <%= f.label :is_deleted, "退会", true %>
  </p>
  <%= f.submit "変更を保存" %>
<% end %>
