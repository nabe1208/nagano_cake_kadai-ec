<div class="container">
 <h3>会員一覧</h3>
  <div class="row">
    <div class="col-md-10 pt-3">
     <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to customer.full_name, admin_customer_path(customer.id) %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <td>
            <% if customer.is_deleted == true %>
             <span>退会</span>
            <% else %>
             <span>有効</span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
     </table>
     <%= paginate @customers %>
    </div>
  </div>
</div>
