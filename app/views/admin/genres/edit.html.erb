<div class="container">
 <h3>ジャンル編集</h3>
 <div class="row">
  <p>
   <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <strong>ジャンル名</strong>
    <%= f.text_field :name ,class:'ml-5 mt-5'%>
