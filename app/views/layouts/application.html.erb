<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
            <li class="nav-item">
             <%= link_to 'マイページ', public_mypage_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to '商品一覧', public_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to 'カート', public_cart_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% elsif admin_signed_in? %>
            <li class="nav-item">
             <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to '会員一覧', admin_customers_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to '注文履歴一覧', admin_root_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item">
             <%= link_to 'About', public_about_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to '商品一覧', public_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to '新規登録', new_customer_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
             <%= link_to 'ログイン', new_customer_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
           </ul>
          </div>
        </div>
       </div>
      </nav>
    </header>
    <main class="md-auto">
      <% if flash[:notice] %>
       <p id = "notice"><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </main>
    <footer class="shadow-sm">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-12">
            <ul class="p-0 list-unstyled">
              <li>
              </li>
              <li>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
